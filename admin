                    <i class="fas fa-times text-xl"></i>
                </button>
            </div>
            <form class="space-y-4">
                <div>
                    <label class="block text-gray-700 text-sm font-bold mb-2">Event Title</label>
                    <input type="text" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-indigo-500" placeholder="Enter event title">
                </div>
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="block text-gray-700 text-sm font-bold mb-2">Date</label>
                        <input type="date" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-indigo-500">
                    </div>
                    <div>
                        <label class="block text-gray-700 text-sm font-bold mb-2">Time</label>
                        <input type="time" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-indigo-500">
                    </div>
                </div>
                <div>
                    <label class="block text-gray-700 text-sm font-bold mb-2">Location</label>
                    <input type="text" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-indigo-500" placeholder="Enter event location">
                </div>
                <div>
                    <label class="block text-gray-700 text-sm font-bold mb-2">Category</label>
                    <select class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-indigo-500">
                        <option>Select Category</option>
                        <option>Religious</option>
                        <option>Educational</option>
                        <option>Community</option>
                        <option>Charity</option>
                    </select>
                </div>
                <div>
                    <label class="block text-gray-700 text-sm font-bold mb-2">Description</label>
                    <textarea class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-indigo-500" rows="4" placeholder="Enter event description"></textarea>
                </div>
                <div>
                    <label class="block text-gray-700 text-sm font-bold mb-2">Expected Attendees</label>
                    <input type="number" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:border-indigo-500" placeholder="Enter expected number of attendees">
                </div>
                <div class="flex space-x-4 pt-4">
                    <button type="button" onclick="closeModal('addEventModal')" class="flex-1 bg-gray-300 hover:bg-gray-400 text-gray-800 px-6 py-3 rounded-lg font-medium">
                        Cancel
                    </button>
                    <button type="submit" onclick="addEvent()" class="flex-1 bg-indigo-600 hover:bg-indigo-700 text-white px-6 py-3 rounded-lg font-medium">
                        Create Event
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Notification Toast -->
    <div id="notification" class="notification fixed top-4 right-4 bg-green-500 text-white px-6 py-4 rounded-lg shadow-lg hidden z-50">
        <div class="flex items-center">
            <i class="fas fa-check-circle mr-3"></i>
            <span id="notification-message">Action completed successfully!</span>
        </div>
    </div>

    <script>
        // Admin Panel JavaScript Functions
        let currentAdminTab = 'dashboard';
        let currentContentTab = 'articles';

        // Initialize charts when page loads
        document.addEventListener('DOMContentLoaded', function() {
            initializeCharts();
        });

        // Show admin tab
        function showAdminTab(tabName) {
            // Hide all tabs
            document.querySelectorAll('.admin-tab').forEach(tab => {
                tab.classList.add('hidden');
            });
            
            // Show selected tab
            document.getElementById('admin-' + tabName).classList.remove('hidden');
            
            // Update navigation
            document.querySelectorAll('.admin-nav-item').forEach(item => {
                item.classList.remove('active');
            });
            event.target.classList.add('active');
            
            currentAdminTab = tabName;
        }

        // Show content tab
        function showContentTab(tabName) {
            // Hide all content tabs
            document.querySelectorAll('.content-tab').forEach(tab => {
                tab.classList.add('hidden');
            });
            
            // Show selected content tab
            document.getElementById('content-' + tabName).classList.remove('hidden');
            
            // Update content tab buttons
            document.querySelectorAll('.content-tab-btn').forEach(btn => {
                btn.classList.remove('active', 'border-indigo-600', 'text-indigo-600');
                btn.classList.add('text-gray-600');
            });
            event.target.classList.add('active', 'border-indigo-600', 'text-indigo-600');
            event.target.classList.remove('text-gray-600');
            
            currentContentTab = tabName;
        }

        // Toggle notifications dropdown
        function toggleNotifications() {
            const dropdown = document.getElementById('notifications-dropdown');
            dropdown.classList.toggle('hidden');
        }

        // Close dropdown when clicking outside
        document.addEventListener('click', function(event) {
            const dropdown = document.getElementById('notifications-dropdown');
            const button = event.target.closest('button');
            
            if (!button || !button.onclick || button.onclick.toString().indexOf('toggleNotifications') === -1) {
                dropdown.classList.add('hidden');
            }
        });

        // Modal functions
        function showAddUserModal() {
            document.getElementById('addUserModal').classList.remove('hidden');
        }

        function showAddArticleModal() {
            document.getElementById('addArticleModal').classList.remove('hidden');
        }

        function showAddEventModal() {
            document.getElementById('addEventModal').classList.remove('hidden');
        }

        function closeModal(modalId) {
            document.getElementById(modalId).classList.add('hidden');
        }

        // Show notification
        function showNotification(message, type = 'success') {
            const notification = document.getElementById('notification');
            const messageEl = document.getElementById('notification-message');
            
            messageEl.textContent = message;
            
            // Set color based on type
            notification.className = `notification fixed top-4 right-4 px-6 py-4 rounded-lg shadow-lg z-50`;
            if (type === 'success') {
                notification.classList.add('bg-green-500', 'text-white');
            } else if (type === 'error') {
                notification.classList.add('bg-red-500', 'text-white');
            } else if (type === 'warning') {
                notification.classList.add('bg-yellow-500', 'text-white');
            }
            
            notification.classList.remove('hidden');
            
            // Auto hide after 3 seconds
            setTimeout(() => {
                notification.classList.add('hidden');
            }, 3000);
        }

        // Admin action functions
        function createBackup() {
            showNotification('Manual backup started successfully!');
        }

        function viewSystemLogs() {
            showNotification('Opening system logs...');
        }

        function generateReport() {
            showNotification('Generating comprehensive report...');
        }

        function addUser() {
            event.preventDefault();
            closeModal('addUserModal');
            showNotification('New user account created successfully!');
        }

        function editUser(username) {
            showNotification(`Editing user: ${username}`);
        }

        function toggleUserStatus(username) {
            showNotification(`User status updated for: ${username}`);
        }

        function deleteUser(username) {
            if (confirm(`Are you sure you want to delete user: ${username}?`)) {
                showNotification(`User ${username} deleted successfully!`);
            }
        }

        function addArticle() {
            event.preventDefault();
            closeModal('addArticleModal');
            showNotification('Article created successfully!');
        }

        function editArticle(articleId) {
            showNotification(`Editing article: ${articleId}`);
        }

        function viewArticle(articleId) {
            showNotification(`Viewing article: ${articleId}`);
        }

        function publishArticle(articleId) {
            showNotification(`Article published: ${articleId}`);
        }

        function deleteArticle(articleId) {
            if (confirm('Are you sure you want to delete this article?')) {
                showNotification('Article deleted successfully!');
            }
        }

        function addEvent() {
            event.preventDefault();
            closeModal('addEventModal');
            showNotification('Event created successfully!');
        }

        function showAddTransactionModal() {
            showNotification('Opening transaction form...');
        }

        function showBudgetModal() {
            showNotification('Opening budget management...');
        }

        function exportFinancialData() {
            showNotification('Exporting financial data...');
        }

        function exportDonorList() {
            showNotification('Exporting donor database...');
        }

        function manageCampaigns() {
            showNotification('Opening campaign management...');
        }

        function sendDonorEmails() {
            showNotification('Opening donor communication panel...');
        }

        function generateFinancialReport(type) {
            showNotification(`Generating ${type} financial report...`);
        }

        function generateSystemReport(type) {
            showNotification(`Generating ${type} system report...`);
        }

        function createManualBackup() {
            showNotification('Creating manual backup...');
        }

        function scheduleBackup() {
            showNotification('Opening backup scheduler...');
        }

        function restoreBackup() {
            if (confirm('Are you sure you want to restore from backup? This will overwrite current data.')) {
                showNotification('Backup restoration started...');
            }
        }

        function resetSystem() {
            if (confirm('WARNING: This will reset all system settings to default. Are you sure?')) {
                showNotification('System settings reset initiated...', 'warning');
            }
        }

        function purgeOldData() {
            if (confirm('WARNING: This will permanently delete old data. This action cannot be undone. Are you sure?')) {
                showNotification('Data purge initiated...', 'warning');
            }
        }

        function logout() {
            if (confirm('Are you sure you want to logout?')) {
                showNotification('Logging out...');
                // Simulate logout redirect
                setTimeout(() => {
                    window.location.href = '#';
                }, 1000);
            }
        }

        // Initialize charts
        function initializeCharts() {
            // Usage Chart
            const usageCtx = document.getElementById('usageChart');
            if (usageCtx) {
                new Chart(usageCtx, {
                    type: 'line',
                    data: {
                        labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
                        datasets: [{
                            label: 'System Usage',
                            data: [65, 78, 85, 92, 88, 95],
                            borderColor: 'rgb(79, 70, 229)',
                            backgroundColor: 'rgba(79, 70, 229, 0.1)',
                            tension: 0.4
                        }]
                    },
                    options: {
                        responsive: true,
                        plugins: {
                            legend: {
                                display: false
                            }
                        },
                        scales: {
                            y: {
                                beginAtZero: true,
                                max: 100
                            }
                        }
                    }
                });
            }

            // Activity Chart
            const activityCtx = document.getElementById('activityChart');
            if (activityCtx) {
                new Chart(activityCtx, {
                    type: 'doughnut',
                    data: {
                        labels: ['Active Users', 'Inactive Users', 'New Users'],
                        datasets: [{
                            data: [8, 2, 2],
                            backgroundColor: [
                                'rgb(34, 197, 94)',
                                'rgb(239, 68, 68)',
                                'rgb(168, 85, 247)'
                            ]
                        }]
                    },
                    options: {
                        responsive: true,
                        plugins: {
                            legend: {
                                position: 'bottom'
                            }
                        }
                    }
                });
            }

            // Trends Chart
            const trendsCtx = document.getElementById('trendsChart');
            if (trendsCtx) {
                new Chart(trendsCtx, {
                    type: 'bar',
                    data: {
                        labels: ['Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'],
                        datasets: [{
                            label: 'Income',
                            data: [12000, 15000, 13500, 16000, 14500, 12450],
                            backgroundColor: 'rgba(34, 197, 94, 0.8)'
                        }, {
                            label: 'Expenses',
                            data: [8000, 9500, 8200, 10000, 9200, 8750],
                            backgroundColor: 'rgba(239, 68, 68, 0.8)'
                        }]
                    },
                    options: {
                        responsive: true,
                        plugins: {
                            legend: {
                                position: 'bottom'
                            }
                        }
                    }
                });
            }

            // Donation Chart
            const donationCtx = document.getElementById('donationChart');
            if (donationCtx) {
                new Chart(donationCtx, {
                    type: 'pie',
                    data: {
                        labels: ['General Fund', 'Zakat', 'Building Fund', 'Emergency Fund'],
                        datasets: [{
                            data: [45, 25, 20, 10],
                            backgroundColor: [
                                'rgb(59, 130, 246)',
                                'rgb(34, 197, 94)',
                                'rgb(168, 85, 247)',
                                'rgb(249, 115, 22)'
                            ]
                        }]
                    },
                    options: {
                        responsive: true,
                        plugins: {
                            legend: {
                                position: 'bottom'
                            }
                        }
                    }
                });
            }
        }

        // Close modals when clicking outside
        document.addEventListener('click', function(event) {
            if (event.target.classList.contains('modal')) {
                event.target.classList.add('hidden');
            }
        });






